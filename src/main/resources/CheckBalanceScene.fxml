<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="382.0" prefWidth="350.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="CheckBalanceController">
    <VBox alignment="CENTER" layoutX="92.0" layoutY="33.0" prefHeight="227.0" prefWidth="150.0" spacing="20">
        <TextField fx:id="cardNumberField" promptText="Enter Metro Card Number" visible="true" />
        <Button fx:id="enterButton" onAction="#handleCardNumberEnter" text="Enter" visible="true" />

        <Button fx:id="balanceButton" onAction="#handleCheckBalance" text="Balance from Database" visible="false" />

        <Label fx:id="balanceLabel" text="Current Balance: $" visible="false" />

        <Button fx:id="exitButton" onAction="#handleExit" text="Exit" visible="false" />
    </VBox>
</AnchorPane>
