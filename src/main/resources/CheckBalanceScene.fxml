<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="LeadershipController">
    <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="50">
        <TextField fx:id="userIdField" promptText="Enter User ID" />
        <PasswordField fx:id="passwordField" promptText="Enter Password" />
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
        <Label fx:id="loginStatusLabel" text="Please login to continue." />

        <Button fx:id="guidanceButton" text="Guidance" onAction="#handleGuidance" visible="false" />
        <TextField fx:id="guidanceTextField" promptText="Write your guidance here..." visible="false" />
        <Button fx:id="submitGuidanceButton" text="Submit Guidance" onAction="#handleSubmitGuidance" visible="false" />
        <Label fx:id="thanksMessage" text="Thanks for your guidance!" visible="false" />

        <Button fx:id="goalsButton" text="Complete Your Daily Goals" onAction="#handleDailyGoals" visible="false" />
        <TextField fx:id="goalTextField" promptText="Write your daily goal..." visible="false" />
        <Button fx:id="submitGoalButton" text="Submit Goal" onAction="#handleSubmitGoal" visible="false" />
        <Label fx:id="goalCompletionMessage" text="Your daily goal submission is complete. Now go to your own field." visible="false" />
    </VBox>
</AnchorPane>
