<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="your.package.name.CostAnalysisController">
    <Label layoutX="250" layoutY="20" style="-fx-font-size: 24;" text="Cost Analysis Tool" />

    <Label layoutX="50" layoutY="80" text="Analyst ID:" />
    <TextField fx:id="analystIdField" layoutX="150" layoutY="80" />

    <Label layoutX="50" layoutY="120" text="Password:" />
    <TextField fx:id="passwordField" layoutX="150" layoutY="120" />

    <Button layoutX="50" layoutY="160" onAction="#handleLogin" text="Login" />

    <Label layoutX="50" layoutY="200" text="Operational Costs Overview:" />
    <Label fx:id="costOverviewLabel" layoutX="200" layoutY="200" />

    <Label layoutX="50" layoutY="240" text="Revenue Streams Overview:" />
    <Label fx:id="revenueOverviewLabel" layoutX="200" layoutY="240" />

    <Label layoutX="50" layoutY="280" text="Input Hypothetical Changes:" />
    <TextField fx:id="hypotheticalChangesField" layoutX="200" layoutY="280" />

    <Button layoutX="50" layoutY="320" onAction="#handleCalculateSavings" text="Calculate Savings" />

    <Label layoutX="50" layoutY="360" text="Potential Cost Savings:" />
    <Label fx:id="savingsLabel" layoutX="200" layoutY="360" />

    <Label layoutX="50" layoutY="400" text="Projected Impact on Service Quality:" />
    <Label fx:id="serviceImpactLabel" layoutX="200" layoutY="400" />

    <Button layoutX="50" layoutY="440" onAction="#handleExportReport" text="Export Report" />

    <PieChart fx:id="costAnalysisChart" layoutX="50" layoutY="480" prefHeight="300" prefWidth="600" />
   <FlowPane prefHeight="200.0" prefWidth="200.0" />
   <TilePane prefHeight="200.0" prefWidth="200.0" />
</AnchorPane>
