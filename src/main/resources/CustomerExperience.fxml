<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CustomerExperienceController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Enter your User ID:" />
        <TextField fx:id="userIdField" layoutX="220.0" layoutY="20.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="60.0" text="Enter your Password:" />
        <PasswordField fx:id="passwordField" layoutX="220.0" layoutY="60.0" prefWidth="200.0" />

        <Button fx:id="loginButton" layoutX="440.0" layoutY="20.0" onAction="#handleLogin" text="Login" />

        <Label fx:id="loginStatusLabel" layoutX="20.0" layoutY="120.0" prefWidth="500.0" text="" />

        <Button fx:id="menuButton" layoutX="440.0" layoutY="60.0" onAction="#handleMenu" text="Go to Menu" />

        <!-- Feedback Section -->
        <Label layoutX="20.0" layoutY="180.0" text="Your Feedback:" />
        <TextField fx:id="feedbackTextFieldd" layoutX="120.0" layoutY="148.0" prefHeight="100.0" prefWidth="470.0" />

        <Button fx:id="submitFeedbackButton" layoutX="432.0" layoutY="278.0" onAction="#handleSubmitFeedback" text="Submit Feedback" />

        <Label fx:id="thankYouMessage" layoutX="20.0" layoutY="260.0" prefWidth="500.0" text="" />
    </children>
</AnchorPane>
