<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="610.0" prefWidth="632.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookTicketSceneController">
   <children>
      <!-- Departure Station Label and ComboBox -->
      <Label layoutX="14.0" layoutY="31.0" prefHeight="39.0" prefWidth="182.0" text="Departure Station " />
      <ComboBox layoutX="209.0" layoutY="32.0" prefHeight="39.0" prefWidth="230.0" fx:id="departureComboBox" />

      <!-- Destination Station Label and ComboBox -->
      <Label layoutX="14.0" layoutY="80.0" prefHeight="39.0" prefWidth="182.0" text="Destination Station" />
      <ComboBox layoutX="209.0" layoutY="80.0" prefHeight="39.0" prefWidth="230.0" fx:id="destinationComboBox" />

      <!-- Search Trains Button -->
      <Button layoutX="308.0" layoutY="133.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="134.0" text="Search Trains" fx:id="searchButton" onAction="#searchTrains" />

      <!-- Train List Table -->
      <TableView layoutX="14.0" layoutY="180.0" prefHeight="200.0" prefWidth="590.0" fx:id="trainTableView">
         <columns>
            <TableColumn fx:id="trainNameColumn" text="Train Name" prefWidth="150.0" />
            <TableColumn fx:id="trainTimeColumn" text="Time" prefWidth="100.0" />
            <TableColumn fx:id="trainFareColumn" text="Fare" prefWidth="100.0" />
         </columns>
      </TableView>

      <!-- Number of Tickets -->
      <Label layoutX="14.0" layoutY="400.0" text="Number of Tickets:" />
      <TextField layoutX="209.0" layoutY="400.0" prefHeight="30.0" prefWidth="60.0" fx:id="ticketCountField" />

      <!-- Total Ticket Price -->
      <Label layoutX="14.0" layoutY="450.0" text="Total Price:" />
      <Label layoutX="209.0" layoutY="450.0" fx:id="priceLabel" text="0.0" />

      <!-- Proceed Button -->
      <Button layoutX="308.0" layoutY="500.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="134.0" text="Proceed to Payment" fx:id="proceedButton" onAction="#proceedPayment" />
   </children>
</AnchorPane>
