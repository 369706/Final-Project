<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExitMetroStationController">
    <children>
        <!-- Simulate Scanning Metro Card -->
        <Label layoutX="20.0" layoutY="20.0" text="Enter Metro Card Number to Scan:" />
        <TextField fx:id="cardNumberField" layoutX="220.0" layoutY="20.0" prefWidth="150.0" />
        <Button fx:id="scanButton" layoutX="220.0" layoutY="70.0" text="Scan" onAction="#scanCard" />

        <!-- Display Status -->
        <Label layoutX="20.0" layoutY="140.0" text="Status:" />
        <Label fx:id="statusLabel" layoutX="220.0" layoutY="140.0" text="" />

        <!-- Display Fare Deducted -->
        <Label layoutX="20.0" layoutY="180.0" text="Fare Deducted:" />
        <Label fx:id="fareLabel" layoutX="220.0" layoutY="180.0" text="" />

        <!-- Display Updated Balance -->
        <Label layoutX="20.0" layoutY="220.0" text="Updated Balance:" />
        <Label fx:id="balanceLabel" layoutX="220.0" layoutY="220.0" text="" />
    </children>
</AnchorPane>
