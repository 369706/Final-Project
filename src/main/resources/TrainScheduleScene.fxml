<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewTrainScheduleController">
   <children>
      <!-- Departure and Destination Input -->
      <Label layoutX="14.0" layoutY="20.0" text="Departure Station" />
      <ComboBox fx:id="departureComboBox" layoutX="160.0" layoutY="20.0" prefWidth="200.0" />

      <Label layoutX="14.0" layoutY="70.0" text="Destination Station" />
      <ComboBox fx:id="destinationComboBox" layoutX="160.0" layoutY="70.0" prefWidth="200.0" />

      <!-- Button to View Schedule -->
      <Button fx:id="viewScheduleButton" layoutX="380.0" layoutY="45.0" text="View Schedule" onAction="#viewTrainSchedule" />

      <!-- TableView for Train Schedule -->
      <TableView fx:id="trainScheduleTable" layoutX="14.0" layoutY="130.0" prefHeight="400.0" prefWidth="570.0">
         <columns>
            <TableColumn fx:id="trainNameColumn" text="Train Name" prefWidth="150.0" />
            <TableColumn fx:id="trainTimeColumn" text="Time" prefWidth="100.0" />
            <TableColumn fx:id="trainDurationColumn" text="Duration" prefWidth="100.0" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
