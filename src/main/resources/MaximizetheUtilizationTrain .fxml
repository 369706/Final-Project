<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="462.0" prefWidth="579.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="MaximizetheUtilizationTrainController">

    <Label layoutX="64.0" layoutY="31.0" style="-fx-font-size: 24;" text="Capacity Management System" />

    <Label layoutX="50" layoutY="80" text="Operator ID:" />
    <TextField fx:id="operatorIdField" layoutX="150" layoutY="80" />
    <Label layoutX="50" layoutY="120" text="Password:" />
    <TextField fx:id="passwordField" layoutX="150" layoutY="120" />
    <Button layoutX="50" layoutY="160" onAction="#handleLogin" text="Login" />

    <Label layoutX="50" layoutY="200" text="Current Train Occupancy:" />
    <Label fx:id="trainOccupancyLabel" layoutX="200" layoutY="200" />
    <Label layoutX="50" layoutY="240" prefHeight="18.0" prefWidth="171.0" text="Current Station Crowd Levels:" />
    <Label fx:id="stationCrowdLabel" layoutX="200" layoutY="240" />

    <Button layoutX="50" layoutY="280" onAction="#handleAdjustTrainSchedules" text="Adjust Train Schedules" />
    <Button layoutX="200" layoutY="280" onAction="#handleRerouteTrains" text="Reroute Trains" />

    <Label layoutX="50" layoutY="320" text="Expected Improvement:" />
    <Label fx:id="expectedImprovementLabel" layoutX="200" layoutY="320" />

    <Button layoutX="50" layoutY="360" onAction="#handleLogout" text="Logout" />

</AnchorPane>
