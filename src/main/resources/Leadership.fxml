<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="478.0" prefWidth="482.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="LeadershipController">
    <AnchorPane fx:id="loginPage" visible="true">
        <VBox alignment="CENTER" layoutX="50" layoutY="50" prefHeight="126.0" prefWidth="178.0" spacing="10">
            <TextField fx:id="userIdField" promptText="Enter User ID" />
            <PasswordField fx:id="passwordField" promptText="Enter Password" />
            <Button fx:id="loginButton" onAction="#handleLogin" text="Login" />
            <Label fx:id="loginStatusLabel" text="Please login to continue." />
        </VBox>
    </AnchorPane>

    <AnchorPane fx:id="guidancePage" visible="false">
        <VBox alignment="CENTER" layoutX="50" layoutY="50" spacing="20">
            <Button fx:id="guidanceButton" onAction="#handleGuidance" text="Guidance" />
        </VBox>
    </AnchorPane>

    <AnchorPane fx:id="guidanceSubmissionPage" visible="false">
        <VBox alignment="CENTER" layoutX="50" layoutY="50" spacing="20">
            <TextField fx:id="guidanceTextField" promptText="Write your guidance here..." />
            <Button fx:id="submitGuidanceButton" onAction="#handleSubmitGuidance" text="Submit Guidance" />
        </VBox>
    </AnchorPane>

    <AnchorPane fx:id="thanksAndGoalsPage" visible="false">
        <VBox alignment="CENTER" layoutX="50" layoutY="50" spacing="20">
            <Label fx:id="thanksMessage" text="Thanks for your guidance!" />
            <Button fx:id="goalsButton" onAction="#handleDailyGoals" text="Complete Your Daily Goals" />
        </VBox>
    </AnchorPane>

    <AnchorPane fx:id="dailyGoalsPage" visible="false">
        <VBox alignment="CENTER" layoutX="50" layoutY="50" spacing="20">
            <TextField fx:id="goalTextField" promptText="Write your daily goal..." />
            <Button fx:id="submitGoalButton" onAction="#handleSubmitGoal" text="Submit Goal" />
        </VBox>
    </AnchorPane>

    <AnchorPane fx:id="goalCompletionPage" visible="false">
        <VBox alignment="CENTER" layoutX="50" layoutY="50" spacing="20">
            <Label fx:id="goalCompletionMessage" text="Your daily goal submission is complete. Now go to your own field." />
        </VBox>
    </AnchorPane>
</AnchorPane>
